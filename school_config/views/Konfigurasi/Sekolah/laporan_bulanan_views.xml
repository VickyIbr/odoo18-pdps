<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Laporan Bulanan List View -->
    <record id="view_laporan_bulanan_list" model="ir.ui.view">
        <field name="name">school_config.laporan.bulanan.list</field>
        <field name="model">school_config.laporan.bulanan</field>
        <field name="arch" type="xml">
            <list string="Laporan Bulanan">
                <field name="nomor"/>
                <field name="wali_kelas"/>
                <field name="group_by"/>
                <field name="operator"/>
                <field name="komponen"/>
            </list>
        </field>
    </record>

    <!-- Laporan Bulanan Form View -->
    <record id="view_laporan_bulanan_form" model="ir.ui.view">
        <field name="name">school_config.laporan.bulanan.form</field>
        <field name="model">school_config.laporan.bulanan</field>
        <field name="arch" type="xml">
            <form string="Laporan Bulanan">
                <sheet>
                    <group>
                        <field name="nomor"/>
                        <field name="wali_kelas"/>
                        <field name="group_by"/>
                        <field name="operator"/>
                        <field name="komponen"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Laporan Bulanan Action -->
    <record id="action_laporan_bulanan" model="ir.actions.act_window">
        <field name="name">Laporan Bulanan</field>
        <field name="res_model">school_config.laporan.bulanan</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>