<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Laporan Yayasan List View -->
    <record id="view_laporan_yayasan_list" model="ir.ui.view">
        <field name="name">school_config.laporan.yayasan.list</field>
        <field name="model">school_config.laporan.yayasan</field>
        <field name="arch" type="xml">
            <list string="Laporan Yayasan" default_order="id asc">
                <field name="name"/>
                <field name="nama_halaqah"/>
                <field name="jumlah_santri"/>
                <field name="total"/>
                <field name="jenjang"/>
                <field name="jumlah"/>
            </list>
        </field>
    </record>

    <!-- Laporan Yayasan Form View -->
    <record id="view_laporan_yayasan_form" model="ir.ui.view">
        <field name="name">school_config.laporan.yayasan.form</field>
        <field name="model">school_config.laporan.yayasan</field>
        <field name="arch" type="xml">
            <form string="Laporan Yayasan">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="nama_halaqah"/>
                        <field name="jumlah_santri"/>
                        <field name="total"/>
                        <field name="jenjang"/>
                        <field name="jumlah"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Laporan Yayasan Action -->
    <record id="action_laporan_yayasan" model="ir.actions.act_window">
        <field name="name">Laporan Ke Yayasan</field>
        <field name="res_model">school_config.laporan.yayasan</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>