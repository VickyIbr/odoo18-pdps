<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Rombel List View -->
    <record id="view_daftar_surat_list" model="ir.ui.view">
        <field name="name">school_config.daftar.surat.list</field>
        <field name="model">school_config.daftar.surat</field>
        <field name="arch" type="xml">
            <list string="Daftar Surat">
                <field name="nomor"/>
                <field name="nama"/>
                <field name="terjemah"/>
                <field name="jumlah_ayat"/>
                <field name="tempat"/>
                <field name="juz"/>
                <field name="materi_kuadran_SD"/>
                <field name="materi_kuadran_TK"/>
            </list>
        </field>
    </record>

    <!-- Rombel Form View -->
    <record id="view_daftar_surat_form" model="ir.ui.view">
        <field name="name">school_config.daftar.surat.form</field>
        <field name="model">school_config.daftar.surat</field>
        <field name="arch" type="xml">
            <form string="Daftar Surat">
                <sheet>
                    <group>
                        <field name="nomor"/>
                        <field name="nama"/>
                        <field name="terjemah"/>
                        <field name="jumlah_ayat"/>
                        <field name="tempat"/>
                        <field name="juz"/>
                        <field name="materi_kuadran_SD"/>
                        <field name="materi_kuadran_TK"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Rombel Action -->
    <record id="action_daftar_surat" model="ir.actions.act_window">
        <field name="name">Daftar Surat</field>
        <field name="res_model">school_config.daftar.surat</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>