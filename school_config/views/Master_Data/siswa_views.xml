<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Master Siswa List View -->
    <record id="view_master_siswa_list" model="ir.ui.view">
        <field name="name">school_config.master.siswa.list</field>
        <field name="model">school_config.master.siswa</field>
        <field name="arch" type="xml">
            <list string="Siswa">
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Master Siswa Form View -->
    <record id="view_master_siswa_form" model="ir.ui.view">
        <field name="name">school_config.master.siswa.form</field>
        <field name="model">school_config.master.siswa</field>
        <field name="arch" type="xml">
            <form string="Siswa">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Master Siswa Action -->
    <record id="action_master_siswa" model="ir.actions.act_window">
        <field name="name">Master Siswa</field>
        <field name="res_model">school_config.master.siswa</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>